#include<iostream>
#include<math.h>
 
using namespace std;
 
int main()
{
    int ydays, days, amount, interestrate, rule;
    cout<< "What is your interest rate? ";
    cin>>interestrate;
    
    rule = 72;
    ydays = 365;
    float years = rule / interestrate;
    days= years * ydays;
    cout << "What is the amount you are investing? ";
    cin>>amount;
    cout<<"Your money doubles in "<< days << "days.";
    cout<<"Your money doubles in "<< years << "years.";
}
