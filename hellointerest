#include<iostream>
#include<math.h>
 
using namespace std;
 
int main()
{
    std::string name;
    std::cout << "What is your name? ";
    getline (std::cin, name);
    std::cout << "Hello, " << name <<  " Are you ready for some compound interest?" << "\n";
    
    float p,r,t,ci;
    
    cout<<"Enter Principle, Rate(use whole number without percentage sign and Time(years):\n";
    cout<<"After you type each variable you can type [ENTER] or a space. Your choice!\n";
    cin>>p>>r>>t;
    
    ci=p*pow((1+r/100),t);
    
    cout<<"\nCompound Interest = "<<ci;
 
    return 0;
}
