void printsw(int w)
{
if ((w == 1 ))
    x= pcw;
else if ((w == 2))
    x = ecw;
else if ((w == 3))
    x = icw;
switch (x)
{
case 0 :
sin0();
break;
case 1 :
sin1();
break;
case 2 :
sin2();
break;
case 3 :
sin3();
break;
case 4 :
