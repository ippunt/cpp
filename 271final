#include <iostream>
#include <ctime>
#include <math.h>
#include <iomanip>
void print();
using namespace std;
int main()
{
//int y,m,d cyear, fyalive, malive;
    std::time_t result = std::time(nullptr);
    std::cout << std::asctime(std::localtime(&result))
              << result << " seconds since the Epoch\n";
int d,m,yy, difference;
double pc, ic, ec;
cout <<"Please give me your date of birth- day, month, year ie 15 4 1986"<<endl;
cin>>d>>m>>yy;m=m-1;// months start at 0
yy =  yy - 1900;
cout <<"yy "<<yy<<" m "<<m<<" d "<<d<<endl;
time_t t = time(0);   // get time now
struct tm  *now = localtime( & t );// now points to the struct members with the localtime
//
    struct std::tm a = {0,0,0,d,m,yy}; //persons info
    struct std::tm b = {0,0,0,now->tm_mday,now->tm_mon,now->tm_year}; // Uses struct for current time
    //now->tm_day   is the same as (*now).tm_day     now.tm_day will not work because object is a pointer
    std::time_t x = std::mktime(&a);
    std::time_t y = std::mktime(&b);
    if ( x != (std::time_t)(-1) && y != (std::time_t)(-1) )
    {
        difference = std::difftime(y, x) / (60 * 60 * 24);
        std::cout << std::ctime(&x);
        std::cout << std::ctime(&y);
        std::cout << "difference = " << difference << " days" << std::endl;

    }
pc = difference % 23;
ec = difference % 28;
ic = difference % 33;
double pcc, ecc, icc;
pcc = pc / 23;
ecc = ec / 28;
icc = ic /33;

cout << pc <<" "<<ec<<" "<<ic<<endl;
cout<<" Your fractional components are"<<std::setprecision(1)<<pcc<<" "<<ecc<<" "<<icc<<endl;

cout<<"Your cycles physical, emotional, and intellectual cycles are "<<endl;
    return 0;
}
void print()//function
{
    string line;
    ifstream myfile ("lab11.txt");
    if (myfile.is_open())
    {
      while ( getline (myfile,line) )
      {
       cout << line << '\n';
      }
    myfile.close();
  }
}
