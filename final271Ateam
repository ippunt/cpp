int getrdays(int x){
pc = x % 23;ec = x % 28;ic = x % 33;//gathers remaining days so we know how far we are into the cycle
return pc;//, ec, ic;
}
int getfract(){
pcc = pc / 23;ecc = ec / 28;icc = ic /33;//gets our remaining days as a fraction
return pcc;//,ecc,icc;
}
int decmove(){
pcw = pcc*10; ecw = ecc*10 ;icw = icc *10;//moving decimal place one position so test can be integeer
return pcw;//,ecw,icw;
}
double getpc(){
    return pc;}
double getic(){
    return ic;}
double getec(){
    return ec;}
private:
int d,m,yy,x;
double pc, ic, ec,pcc,ecc,icc,pcw,ecw,icw;
};jeffs jeff;
int main()
{
int difference,para, chyr;difference = 0;//difference
jeff.ask();//Ask user for info
jeff.getbday();//gather user info
time_t t = time(0);   // get time now
struct tm  *now = localtime( & t );// initializing stuct with now,now is object that points to the struct members with the localtime
//
    struct std::tm a = {0,0,0,jeff.getd(),jeff.getm(),jeff.getyy()}; //persons info
    struct std::tm b = {0,0,0,now->tm_mday,now->tm_mon,now->tm_year}; // Uses struct for current time
    //now->tm_day   is the same as (*now).tm_day     now.tm_day will not work because object is a pointer
    std::time_t x = std::mktime(&a);
    std::time_t y = std::mktime(&b);
    if ( x != (std::time_t)(-1) && y != (std::time_t)(-1) )
    {
        difference = std::difftime(y, x) / (60 * 60 * 24);
        std::cout << std::ctime(&x);
        std::cout << std::ctime(&y);
        std::cout << "Days you have been alive = " << difference << " days" << std::endl;

    }
jeff.getrdays(difference);
//pc = difference % 23;
//ec = difference % 28;
//ic = difference % 33;// this gets us how many days into the cycle the person is
//double pcc, ecc, icc, pcw, ecw, icw;
//pcc = pc / 23;
//ecc = ec / 28;
//icc = ic /33; // this gives us the fraction they are into the cycle
jeff.getfract();
//pcw = pcc*10; ecw = ecc*10 ;icw = icc *10;//moving decimal place one position so test can be integeer
jeff.decmove();
cout <<std::fixed<<" Your Physical wave is "<< std::setprecision(1)<< jeff.getpc() <<" days into the 23 day cycle here is your approximate graph"<<endl;
jeff.printsw(1);
cout <<" Your Emotional wave is "<< jeff.getec() <<" days into the 28 day cycle here is your approximate graph"<<endl;
jeff.printsw(2);
cout <<" Your Intellectual wave is "<< jeff.getic() <<" days into the 33 day cycle here is your approximate graph"<<endl;
jeff.printsw(3);
//added paragraphs
para= (jeff.getm() % 9);
//cout message I corresponded the paragraphs with
cout<< "By the looks of things... you fall under the category of... " <<pira.btnum[para]<<endl;
//Here we get the index of the horoscope animal according to birth year. They go from 0 to 11 
chyr = (jeff.getyy() % 12);
//Here we print a message and the info related to the horoscope
cout<<"Your chinese animal is ... "<<chnewy.chnum[chyr]<<endl;
    return 0;
}
